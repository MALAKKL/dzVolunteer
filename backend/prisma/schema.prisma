generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Volunteer {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String        @unique
  password     String
  skills       Skill[]       @relation("VolunteerSkills")
  applications Application[]
  createdAt    DateTime      @default(now())
}

model Organization {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  missions    Mission[]
}

model Mission {
  id             Int             @id @default(autoincrement())
  title          String
  description    String
  location       String
  date           DateTime
  slots          Int
  organization   Organization    @relation(fields: [organizationId], references: [id])
  organizationId Int
  applications   Application[]
  skillsRequired Skill[]         @relation("MissionSkills")
}

model Skill {
  id         Int         @id @default(autoincrement())
  name       String
  verified   Boolean     @default(false)

  // M-M with Volunteer
  volunteers Volunteer[] @relation("VolunteerSkills")

  // M-M with Mission
  missions   Mission[]   @relation("MissionSkills")
}

model Application {
  id          Int        @id @default(autoincrement())
  status      String     @default("pending")
  volunteer   Volunteer  @relation(fields: [volunteerId], references: [id])
  volunteerId Int
  mission     Mission    @relation(fields: [missionId], references: [id])
  missionId   Int
  createdAt   DateTime   @default(now())
}
