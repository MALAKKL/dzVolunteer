generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}


model Volunteer {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String   @unique
  password     String
  phone        String?
  bio          String?
  city         String?
  country      String?
  profileImage String?
  interests    String[]
  availability String[]
  createdAt    DateTime @default(now())

  applications Application[]
  skills       VolunteerSkill[]
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  address   String?
  phone     String?
  createdAt DateTime @default(now())

  missions      Mission[]
  notifications Notification[]
}


model Mission {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  city           String
  country        String
  startDate      DateTime
  endDate        DateTime?
  slotsRequired  Int      @default(1)
  status         String   @default("published") // draft | published | archived
  createdAt      DateTime @default(now())

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  applications   Application[]
  skills         MissionSkill[]
}


model Application {
  id          Int      @id @default(autoincrement())
  volunteerId Int
  missionId   Int
  createdAt   DateTime @default(now())

  volunteer Volunteer @relation(fields: [volunteerId], references: [id])
  mission   Mission   @relation(fields: [missionId], references: [id])

  @@unique([volunteerId, missionId])
}


model Notification {
  id             Int      @id @default(autoincrement())
  message        String
  read           Boolean  @default(false)
  createdAt      DateTime @default(now())

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
}


model Skill {
  id                   Int      @id @default(autoincrement())
  name                 String   @unique
  verificationRequired Boolean  @default(false)

  volunteerSkills VolunteerSkill[]
  missionSkills   MissionSkill[]
}


model MissionSkill {
  id        Int @id @default(autoincrement())
  missionId Int
  skillId   Int

  mission Mission @relation(fields: [missionId], references: [id])
  skill   Skill   @relation(fields: [skillId], references: [id])

  @@unique([missionId, skillId])
}

model VolunteerSkill {
  id          Int    @id @default(autoincrement())
  volunteerId Int
  skillId     Int
  status      String @default("pending") // pending | verified

  volunteer Volunteer @relation(fields: [volunteerId], references: [id])
  skill     Skill     @relation(fields: [skillId], references: [id])

  @@unique([volunteerId, skillId])
}
